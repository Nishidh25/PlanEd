<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanEd" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">#B27906</item>
        <item name="colorPrimaryVariant">#F6AB13</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FBD589</item>
        <item name="colorSecondaryVariant">#F9C762</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="buttonStyle">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="fontFamily">@font/montserrat</item>

    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>

    </style>


    <style name="Theme.onboard" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">#B27906</item>
        <item name="colorPrimaryVariant">#F6AB13</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FBD589</item>
        <item name="colorSecondaryVariant">#F9C762</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="buttonStyle">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="fontFamily">@font/montserrat</item>


    </style>



</resources>